<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rocky.teatime.fragments.tea_detail.BrewTeaViewFragment">

    <TextView
        android:id="@+id/min_temp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX F"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="38sp"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="180dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        android:layout_marginStart="64dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Enjoy"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="64dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp" />

    <ImageButton
        android:id="@+id/second_brew_button"
        android:layout_width="98dp"
        android:layout_height="102dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/tea_bag_icon_seond"
        app:layout_constraintLeft_toRightOf="@+id/first_brew_button"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:layout_marginRight="64dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="64dp" />

    <ImageButton
        android:id="@+id/first_brew_button"
        android:layout_width="98dp"
        android:layout_height="102dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/tea_bag_icon_first"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="64dp" />

    <TextView
        android:id="@+id/first_brew_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X:XX"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/first_brew_button"
        android:layout_marginLeft="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="75dp" />

    <TextView
        android:id="@+id/second_brew_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X:XX"
        app:layout_constraintLeft_toRightOf="@+id/first_brew_time"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/second_brew_button"
        android:layout_marginStart="168dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BrewBetween"
        android:textSize="36sp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/first_brew_time"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="64dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp" />

    <TextView
        android:id="@+id/max_temp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX F"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="38sp"
        android:layout_marginRight="68dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="180dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        android:layout_marginEnd="68dp" />

    <TextView
        android:id="@+id/single_temp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="-"
        android:textSize="38sp"
        app:layout_constraintLeft_toRightOf="@+id/min_temp_view"
        app:layout_constraintRight_toLeftOf="@+id/max_temp_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        android:layout_marginBottom="180dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Strength"
        android:textSize="30sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/single_temp_view"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="64dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintHorizontal_bias="0.476" />

    <TextView
        android:id="@+id/strengthView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:text="XX.XX"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/strengthUnitView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/strengthUnitView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="63dp"
        android:layout_marginTop="32dp"
        android:text="@string/ImperialIdeal"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</android.support.constraint.ConstraintLayout>
