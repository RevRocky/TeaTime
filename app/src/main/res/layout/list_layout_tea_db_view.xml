<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/teaNameList"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@+id/first_steep_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/teaCupIconList"
        android:layout_toEndOf="@+id/teaCupIconList"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/brewButton"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:text="@string/Brew"
        android:textSize="8sp"
        app:layout_constraintRight_toLeftOf="@+id/editTeaButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignTop="@+id/editTeaButton"
        android:layout_toLeftOf="@+id/editTeaButton"
        android:layout_toStartOf="@+id/editTeaButton"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:id="@+id/teaCupIconList"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/teaNameList"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tea_icon_temp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignTop="@+id/teaNameList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/editTeaButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/teaNameList"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        app:srcCompat="@android:drawable/ic_menu_edit" />
</RelativeLayout>